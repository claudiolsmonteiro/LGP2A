

<script>
$( document ).ready(function() {
$('.menu li').removeClass('active');
$('.menu .etiquetas').addClass('active');
});
</script>


<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Editar etiqueta de uma sala</h1>
    </div>
  </div><!--/.row-->


  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="col-md-12">
            <%= form_for @point, :url => {:action => "update", :controller => "points"} do |f| %>
                <h3>Dados gerais</h3>
                <div class="form-group">
                  <%= f.hidden_field :photo_id , class:"form-control" %>
                </div>
                <div class="form-group">
                  <label>Coordenadas X da etiqueta</label>
                  <%= f.number_field :x , class:"form-control" %>
                </div>
                <div class="form-group">
                  <label>Coordenadas Y da etiqueta</label>
                  <%= f.number_field :y , class:"form-control" %>
                </div>
                <br/>
                <br/>
                <h3>Dados categorizadores</h3>
                <%= f.fields_for :point_translations do |rt| %>
                    <div class="form-group">
                      <label>Título do ponto</label>
                      <%= rt.text_field :title , class:"form-control" %>
                    </div>
                    <div class="form-group">
                      <label>Descrição do ponto</label>
                      <%= rt.text_area :description , class:"form-control" %>
                    </div>
                    <div class="form-group">
                      <label>Idioma </label>
                      <br/>
                      <%= rt.collection_select(:language_id, Language.all, :id, :name )  %>
                    </div>
                    <br/>
                    <br/>
                <% end %>


                <%= f.submit "Enviar", class:"btn btn-primary", style:"margin: 5px;" %><%= link_to 'Voltar', points_path, class:"btn btn-default"%>
            <% end %>
          </div>
        </div>
      </div>
    </div><!-- /.col-->
  </div><!-- /.row -->
</div><!--/.main-->

