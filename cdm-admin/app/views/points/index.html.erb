
<% provide(:title, 'All Points') %>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Todos os pontos</h1>
    </div>
  </div><!--/.row-->


  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <table  class="table table-hover">
            <thead>
            <tr>
              <th data-field="id" data-align="right">Título do Ponto</th>
              <th data-field="id" data-align="right">Espaço do ponto</th>
              <th data-field="id" data-align="right">Mostrar</th>
              <th data-field="id" data-align="right">Editar</th>
              <th data-field="id" data-align="right">Eliminar</th>
            </tr>

            </thead>
            <% @points.each do |point| %>
                <tr>
                  <td><%= @point_ts.where(point_id: point.id).first.title %></td>
                  <td><%= @rooms_ts.where(room_id: @rooms.where(id: @photos.where(id: point.photo_id).first.room_id).first.id).first.name %></td>
                  <td><%= link_to 'Mostar', point %></td>
                  <td><%= link_to 'Editar', edit_point_path(point) %></td>
                  <td><%= link_to 'Eliminar', point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
            <% end %>
          </table>
        </div>
      </div>
      <%= link_to 'Novo ponto', new_point_path , class:"btn btn-primary" %>
    </div>
  </div>
</div>
<script>
  $( document ).ready(function() {
    $('.menu li').removeClass('active');
    $('.menu .etiquetas').addClass('active');
  });
</script>