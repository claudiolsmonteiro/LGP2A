
<% provide(:title, 'All Points') %>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Todos os pontos</h1>
    </div>
  </div><!--/.row-->


  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <table  class="table table-hover">
            <thead>
            <tr>
              <th data-field="id" data-align="right">CÃ³digo do Ponto</th>
              <th data-field="id" data-align="right">Show</th>
              <th data-field="id" data-align="right">Edit</th>
              <th data-field="id" data-align="right">Destroy</th>
              <th data-field="id" data-align="right">Adicionar etiqueta</th>
            </tr>

            </thead>
            <% @points.each do |point| %>
                <tr>
                  <td data-field="id" data-align="right"><%= link_to point.id %></td>
                  <td><%= link_to 'Show', point %></td>
                  <td><%= link_to 'Edit', edit_point_path(point) %></td>
                  <td><%= link_to 'Destroy', point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
            <% end %>
          </table>
          <%= link_to 'New Point', new_point_path %>
        </div>
      </div>
    </div>
  </div>
</div>
