
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Adicionar etiqueta a uma sala</h1>
    </div>
  </div><!--/.row-->


  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="col-md-12">
            <%= form_for @point, url: '/points' do |f| %>
                <div class="form-group">
                  <label>Selecionar sala da foto correspondente</label>
                  <!-- <%= f.number_field :photo_id  %> -->
                  <select name="point[photo_id]", class="form-control">

                    <% @rooms.each do |p| %>
                        <% if !p.photo.nil? %>
                            <option value="<%= p.photo.id %>" ><%= p.code %></option>
                        <%end%>
                    <% end %>
                  </select>
                </div>

                <div class="form-group">
                  <label>Coordenadas X da etiqueta</label>
                  <%= f.number_field :x , class:"form-control" %>
                </div>
                <div class="form-group">
                  <label>Coordenadas Y da etiqueta</label>
                  <%= f.number_field :y , class:"form-control" %>
                </div>

                <%= f.fields_for :point_translations do |rt| %>
                    <div class="form-group">
                      <label>Título do ponto</label>
                      <%= rt.text_field :title , class:"form-control" %>
                    </div>
                    <div class="form-group">
                      <label>Descrição do ponto</label>
                      <%= rt.text_area :description , class:"form-control" %>
                    </div>
                    <div class="form-group">
                      <label>Selecionar Idioma</label>
                      <!-- <%= rt.text_field :language_id , class:"form-control" %> -->
                      <select name="point[point_translations_attributes][language_id]", class="form-control">

                        <% @languages.each do |language| %>
                                <option  value=<%= language.id %> ><%= language.name %></option>
                        <% end %>
                      </select>
                    </div>
                <% end %>


                <%= f.submit "Enviar", class:"btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
    </div><!-- /.col-->
  </div><!-- /.row -->
</div><!--/.main-->
<script>
  $( document ).ready(function() {
    $('.menu li').removeClass('active');
    $('.menu .etiquetas').addClass('active');
  });
</script>