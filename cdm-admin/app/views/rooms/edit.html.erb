<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Editar uma sala</h1>
    </div>
  </div><!--/.row-->

<script>
  $( document ).ready(function() {
    $('.menu li').removeClass('active');
    $('.menu .espacos').addClass('active');
  });
</script>


  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="col-md-12">
            <%= form_for @room, :url => {:action => "update", :controller => "rooms"} do |f| %>

                <div class="form-group">
                  <label>Room code</label>
                  <%= f.text_field :code , class:"form-control" %>
                </div>
                <div class="form-group">
                  <label>Model Path</label>
                  <%= f.text_field :model_path , class:"form-control" %>
                </div>
                <div class="form-group">
                  <label>Texture Path</label>
                  <%= f.text_field :texture_path , class:"form-control" %>
                </div>
                <div class="form-group">
                  <label>Animation</label>
                  <%= f.text_field :animation , class:"form-control" %>
                </div>
                <div class="form-group">
                  <label>Beacon UUID</label>
                  <%= f.text_field :beacon_uuid , class:"form-control" %>
                </div>
                <div class="form-group">
                  <label>Beacon Major</label>
                  <%= f.text_field :beacon_major , class:"form-control" %>
                </div>
                <div class="form-group">
                  <label>Beacon Minor</label>
                  <%= f.text_field :beacon_minor , class:"form-control" %>
                </div>
                <div class="form-group">
                  <label>Next Room</label>
                  <%= f.text_field :next_room , class:"form-control" %>
                </div>
                <%= f.fields_for :room_translations do |rt| %>
                    <div class="form-group">
                      <label>Room name</label>
                      <%= rt.text_field :name , class:"form-control" %>
                    </div>
                    <div class="form-group">
                      <label>Room description</label>
                      <%= rt.text_area :description , class:"form-control" %>
                    </div>
                    <div class="form-group">
                      <label>Language Id</label>
                      <%= rt.text_field :language_id , class:"form-control" %>
                    </div>
                <% end %>

                <%= f.submit "Submit", class:"button" %>
            <% end %>
            <%= link_to 'Back', rooms_path %>
          </div>
        </div>
      </div>
    </div><!-- /.col-->
  </div><!-- /.row -->
</div><!--/.main-->
