
<% provide(:title, 'All rooms') %>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Todas as salas</h1>
    </div>
  </div><!--/.row-->


  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <table  class="table table-hover">
            <thead>
            <tr>
              <th data-field="id" data-align="right">Nome do spaço</th>
              <th data-field="id" data-align="right">Mostrar</th>
              <th data-field="id" data-align="right">Editar</th>
              <th data-field="id" data-align="right">Eliminar</th>
            </tr>

            </thead>
            <% @rooms.each do |room| %>
                <tr>
                  <td data-field="id" data-align="right"><%= @rooms_ts.where(id: room.id).first.name %></td>
                  <td><%= link_to 'Mostrar', room %></td>
                  <td><%= link_to 'Editar', edit_room_path(room) %></td>
                  <td><%= link_to 'Eliminar', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
            <% end %>
          </table>

        </div>
      </div>
      <%= link_to 'Novo espaço', new_room_path,   class:"btn btn-primary" %>
    </div>
  </div>
</div>
<script>
  $( document ).ready(function() {
    $('.menu li').removeClass('active');
    $('.menu .espacos').addClass('active');
  });
</script>