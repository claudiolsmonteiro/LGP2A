<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">Bem-vindo de volta!</div>
      <div class="panel-body">
        <%= form_tag '/login' do %>
            <fieldset>
              <div class="form-group">
                <%= text_field_tag :email, nil, class: 'form-control',placeholder:'Email' %>
                </div>
              <div class="form-group">
                <%= password_field_tag :password, nil, class: 'form-control',placeholder:'Palavra-pass' %>
                </div>
                <%= submit_tag "Entrar", class:"btn btn-primary" %>

            </fieldset>
        <% end %>
      </div>
      </div>
  </div><!-- /.col-->
</div><!-- /.row -->
